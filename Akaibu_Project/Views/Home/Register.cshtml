@model Akaibu_Project.Entions.Users

<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
    <link rel="stylesheet" type="text/css" href="~/css/register.css">
</head>
<body class ="register-page">
    <div class="register-container">
        <div class="left-section">
            <h1 id ="hello-text">Hello, Friend!</h1>
            <p id ="glad-text">I'm glad you're here.</p>
        </div>
        <div class="right-section">
            <h2 style="margin-bottom: 50px;">Create an Account</h2>
            @using (Html.BeginForm("Register", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-field">
                    @Html.TextBoxFor(model => model.Nick, new { @placeholder = "Nick", @required = "required" })
                    <label for="nick">Nick</label>
                </div>

                <div class="form-field">
                    @Html.TextBoxFor(model => model.Login, new { @placeholder = "Email", @required = "required" })
                    <label for="email">Email</label>
                </div>

                <div class="form-field">
                    @Html.PasswordFor(model => model.Password, new { @placeholder = "Password", @required = "required" })
                    <label for="password">Password</label>
                </div>

                <button type="submit">Sign In</button>
            }
        </div>
    </div>
</body>
</html>