@model SearchResults

@{
    ViewData["Title"] = "Search Results";
}

<h2>Search Results</h2>

<form asp-controller="Home" asp-action="Search" method="get" id="searchForm">
        <div class="form-group">
            <label for="query">Search by Name:</label>
            <input type="text" name="query" id="query" />
        </div>

        <div class="form-group">
            <label for="tag">Search by Tag:</label>
            <input type="text" name="tag" id="tag" />
        </div>

        <div class="form-group">
            <button type="submit">Search</button>
        </div>
</form>

<div id="passwordContainer">
    <!-- Tutaj umieść kod do wyświetlania hasła -->
    @if (Model != null && Model.YourSearchResultsList != null && Model.YourSearchResultsList.Any())
    {
        <h3>Search Results:</h3>
        <ul>
            @foreach (var result in Model.YourSearchResultsList)
            {
                <li>
                    <h4>@result.Title</h4>
                    <!-- Dodaj więcej pól, które chcesz wyświetlić -->
                    <!-- Dodaj link do strony z detalami anime -->
                    <a asp-controller="Home" asp-action="AnimeDetails" asp-route-id="@result.Id">Details</a>
                    <a asp-controller="Home" asp-action="Comments" asp-route-id="@result.Id">Comments</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No results found.</p>
    }
</div>
