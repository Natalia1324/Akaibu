@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" method="post">
    <div>
        <label>Email:</label>
        <input type="text" name="login" />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password" />
    </div>
    <div>
        <button type="submit">Login</button>
    </div>
</form>
