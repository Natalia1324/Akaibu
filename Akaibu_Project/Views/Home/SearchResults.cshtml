@{
    ViewData["Title"] = "Search";
}

@model Akaibu_Project.Entions.Users
<style>
    #sebutton {
        background-color: #E9987D;
        color: #fff;
    }
</style>


<h2 ">Search Results</h2>

<form asp-controller="Home" asp-action="Search" method="get" id="searchForm">
   
      <div class= "from-group">
            <label style=" color: #E9987D" for="query">Search by Name:</label>
            <input style=" border-radius: 7px " type="text" id="query" name="query"><br>
      </div>

        <div class="from-group">
            <label style=" border-radius: 7px " style=" color: #E9987D" for="tag">Search by Tag:</label>
            <input style=" border-radius: 7px " type="text" id="tag" name="tag"><br>
        </div>

        <div class="form-group">
        <button  id="sebutton" style=" border-radius: 7px; " type="submit">Search</button>
        </div>
    
</form>
<br>
<br>

<div id="passwordContainer">
    <!-- Tutaj umieść kod do wyświetlania hasła -->
    @if (Model != null && Model.search.YourSearchResultsList != null && Model.search.YourSearchResultsList.Any())
    {
        <h3>Search Results:</h3>
        <ul>
            @foreach (var result in Model.search.YourSearchResultsList)
            {
                <li>
                    <h4>@result.Title</h4>
                    <!-- Dodaj więcej pól, które chcesz wyświetlić -->
                    <!-- Dodaj link do strony z detalami anime -->
                    <!-- Dodaj link do strony z detalami anime -->
                @Html.Raw($"<a href=\"{Url.Action("AnimeDetails", "Home", new { id = result.Id })}\">Details</a>")

                    <!-- Link do strony z komentarzami anime -->
                @Html.Raw($"<a href=\"{Url.Action("Comments", "Home", new { id = result.Id })}\">Comments</a>")



                  <!--  <a asp-controller="Home"  asp-action="AnimeDetails" asp-route-id="@result.Id">Details</a> -->
                    <!-- Link do strony z komentarzami anime -->
                    <!--   <a asp-controller="Home"  asp-action="Comments" asp-route-id="@result.Id">Comments</a> -->
                </li>
            }
        </ul>
    }
    else
    {
        <p>No results found.</p>
    }
</div>
