@model Akaibu_Project.Models.BanReasonViewModel

@{
    ViewBag.Title = "Ban Reason";
}

<h2>Zapisz powód bana</h2>

@using (Html.BeginForm("ProcessBanReasonForm", "Home", FormMethod.Post))
{
    @Html.HiddenFor(model => model.UserId)

    <div class="form-group">
        @Html.LabelFor(model => model.Reason)
        @Html.TextAreaFor(model => model.Reason, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-danger">Potwierdzam Ban</button>
}
